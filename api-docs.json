      "/product/{id}": {
        "get": {
            "tags": [
                "Product"
              ],
          "summary": "Get product by ID ",
          "parameters": [
            {
                "name": "id",
                "in": "path",
                "required": true,
                "type":"string"
              }
          ],
          "responses": {
            "200": { "description": "Product retrived successfully" },
            "404": { "description": "Product not found" },
            "500": { "description": "Internal server error" }
          }
        }
